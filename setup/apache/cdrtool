<Directory /var/www/CDRTool>
        DirectoryIndex index.phtml index.html
	<Files ~ "~$">
	Order allow,deny
	Deny from all
	</Files>
	<Files *.inc>
	Order allow,deny
	Deny from all
	</Files>
	<Files *_lib.*>
	Order allow,deny
	Deny from all
	</Files>
	<Files *.csv>
	Order allow,deny
	Deny from all
	</Files>
        <Files _darcs>
        Order allow,deny
        Deny from all
        </Files>
</Directory>

<Directory /var/www/CDRTool/scripts>
	<Limit PUT GET POST HEAD>
	order deny,allow
	deny from all
	allow from 127.0.0.1 localhost 
	</Limit>
</Directory>

<Directory /var/www/CDRTool/doc>
	Options Indexes MultiViews
</Directory>

<Directory /var/www/CDRTool/csv>
	<Limit PUT GET POST HEAD>
	order allow,deny
	allow from 127.0.0.1
	deny from all
	</Limit>
</Directory>
